package JUnit5;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

import clase.Jugador;

class JugadorTest {

	@Test
	public void testDorsalPositivo() {
		Jugador jugador = new Jugador();
		jugador.setDorsal(10);
		
		int resultadoEsperado = 10;
		int resultadoObtenido = jugador.getDorsal();
		
		assertEquals(resultadoEsperado, resultadoObtenido);
	}
	
	@Test
	public void testDorsalNegativo() {
		Jugador jugador1 = new Jugador();
		jugador1.setDorsal(10);
		
		Jugador jugador2 = new Jugador();
		
		int resultadoEsperado = -1;
		int resultadoObtenido = jugador2.getDorsal();
		
		assertEquals(resultadoEsperado, resultadoObtenido);
	}

}
