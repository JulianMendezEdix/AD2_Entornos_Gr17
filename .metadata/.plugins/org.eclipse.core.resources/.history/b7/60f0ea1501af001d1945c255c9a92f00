package JUnit5;

import clase.Soldado;

import static org.junit.Assert.assertTrue;
import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

public class SoldadoTest {

	@Test
	public void testPuedeDispararTieneBalas() {;
	    Soldado sol = new Soldado();
	    sol.setNumeroBalas(10);
		assertTrue(true);
		
	}
	@Test
	public void testPuedeDispararSinBalas() {
		Soldado sol = new Soldado();
	    sol.setNumeroBalas(0);
		assertFalse(false);
	}
	@Test
	public void testDisparar() {
		
		Soldado sol = new Soldado();
		Soldado sol1 = new Soldado();
		int numeroBalasInicial = sol.getNumeroBalas();
		int numeroBalasFinal = sol.getNumeroBalas();
		
		assertEquals(numeroBalasInicial - 1, numeroBalasFinal);
		
		assertTrue(sol.isEstaMuerto());
		
	}
	
	

}
